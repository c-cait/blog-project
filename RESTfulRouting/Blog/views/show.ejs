<%- include("partials/header") %>

<div class="ui main text container segment"> <!--segment adds a line border-->
    <div class="ui huge header"><%=blog.title%>
    </div>
    <div class="ui top attached"> <!--this is to attach to other contents on a page-->
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>">
            <div class="content">
                <span><%=blog.created.toDateString()%></span>
            </div>
            <div class="description">
                <!--changing from = to - will actually take blog.body and run it as code(evaluate it) rather than displaying-->
                <p><%-blog.body%></p>
            </div>
            <a class="ui blue basic button"href="/blogs/<%=blog._id%>/edit">Edit</a>
            <form id="delete" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                <button class="ui red basic button">
                    DELETE
                </button>
            </form>
        </div>
    </div>
    
 </div>

<%- include("partials/footer") %>