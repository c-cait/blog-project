<%- include("partials/header") %>

<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segement">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <!-- this help contrain size of image-->
                    <div class="image">
                        <img src="<%= blog.image %>">
                    </div>
                    <div class="content">
                    <!-- this way you can click on header or readmore to go to show page-->
                        <a class="header" href="/blogs/<%= blog._id %>"><%=blog.title%></>
                            <div class="meta"> <!-- a place for us to put information about item-->
                                <span><%=blog.created.toDateString()%></span>
                            </div>
                            <div class="description">
                                <p><%-blog.body.substring(0, 100)%> . . . </p>
                            </div>
                            <div class="extra">
                                <a class="ui floated basic olive button" href="/blogs/<%= blog._id %>">
                                Read More
                                <i class="right chevron icon"></i>
                                </a>
                            </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>



<%- include("partials/footer") %>